-- program27 should result in 9 errors
program prog27 is
    i: integer;

begin 
    i := 15;
    writeln "Before the first for loop, i = " & int2string(i);
	writeln "In ascending order: ";
	for i in 1..5
	loop
		write int2string(i) & " " -- error because of missing semicolon
	end loop;
	writeln;
    writeln "Between the for loops, i = " & int2string(i);
	writeln "In descending order: ";
	for i in reverse 1.5 -- error because expected range
	loop
		write int2string(i) & " ";
	en loop; -- 7 errors because end loop typo
	writeln;
    writeln "After the second for loops, i = " & int2string(i);
end prog27;

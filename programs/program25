program prog25 is
	number, dNumber, qNumber: real;

	procedure double(n1: value real; n2: ref real) is
	begin
		n2 := n1 + n1;
	end double;

	procedure quadruple(n1: value real; n2: ref real) is
		n: real;
	begin
		double(n1, n);
		double(n, n);
		n2 := n;
	end quadruple;

begin
	write ("Enter a number: ");
	read (number);
	double(number, dNumber);
	quadruple(number, qNumber);
	writeln;	-- Leave an empty line
	writeln (real2string(number), "  ", real2string(dnumber), "  ", real2string(qNumber));
end prog25;
